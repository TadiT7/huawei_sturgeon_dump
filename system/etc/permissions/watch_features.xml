<permissions>
    <!-- Marks this device as a watch. -->
    <feature name="android.hardware.type.watch" />

    <!-- Turns on USB service, necessary for secure adb. -->
    <feature name="android.hardware.usb.accessory" />

    <!-- Enable live wallpapers -->
    <feature name="android.software.live_wallpaper" />

    <!-- Enable voice recognizers -->
    <feature name="android.software.voice_recognizers" />
</permissions>
